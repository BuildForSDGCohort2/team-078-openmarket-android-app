<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.buildforsdg.openmarket.ui.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.buildforsdg.openmarket.ui.auth.login.LoginFragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.buildforsdg.openmarket.ui.auth.register.RegisterFragment"
        tools:layout="@layout/register_fragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.buildforsdg.openmarket.ui.home.HomeFragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.buildforsdg.openmarket.ui.explore.ExploreFragment"
        tools:layout="@layout/explore_fragment" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.buildforsdg.openmarket.ui.cart.CartFragment"
        tools:layout="@layout/cart_fragment" />
    <fragment
        android:id="@+id/offerFragment"
        android:name="com.buildforsdg.openmarket.ui.offer.OfferFragment"
        tools:layout="@layout/offer_fragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.buildforsdg.openmarket.ui.profile.ProfileFragment"
        tools:layout="@layout/profile_fragment" />
    <fragment
        android:id="@+id/resendEmailFragment"
        android:name="com.buildforsdg.openmarket.ui.auth.resendmail.ResendEmailFragment"
        tools:layout="@layout/resend_email_fragment" />
</navigation>